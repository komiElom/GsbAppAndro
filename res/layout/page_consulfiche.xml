<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bleueClair"
    android:orientation="vertical" >
    
        <TextView
        android:id="@+id/tvtitreConsultatFiche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Page d'Acceuil" />
    <LinearLayout 
    android:orientation="vertical" 
    android:layout_gravity="center"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
    >       
<TextView
        android:id="@+id/tvTitreIDConsultatFiche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id du Visiteur" />
    
   <TextView
        android:id="@+id/tvAfficheurIdVisiteurConsultatFiche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textColor="@color/blanc"
        android:textStyle="italic"
        android:text="Affiche l'ID du Visiteur" />

   <TextView
       android:id="@+id/tvTitreNomVisiteurConsultatFiche"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Nom du Visiteur" />

   <TextView
       android:id="@+id/tvAfficheurNomVisiteurConsultatFiche"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
        android:textColor="@color/blanc"
        android:textStyle="italic"
       android:text=" affic nom" />

   <TextView
       android:id="@+id/tvTitrePeriodeConsultatFiche"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="la Periode " />

   <TextView
       android:id="@+id/tvAfficheurPeriodeConsultatFiche"
       android:layout_width="wrap_content"
        android:textColor="@color/blanc"
        android:textStyle="italic"
       android:layout_height="wrap_content"
       android:text="affiche periode" />
</LinearLayout>
             <LinearLayout 
    android:orientation="vertical" 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="40dp"
       android:layout_marginLeft="2dp"
    > 
   <TextView
       android:id="@+id/tvTitreMontantConsultatFiche"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Montant validé" />

   <TextView
       android:id="@+id/tvAfficheurMontantConsultatFiche"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
        android:textColor="@color/blanc"
        android:textStyle="italic"
       android:text="affiche Montant" />

   <TextView
       android:id="@+id/tvTitreEtatFicheConsultatFiche"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="l'état de la fiche " />

   <TextView
       android:id="@+id/tvAfficheurEtatFicheConsultatFiche"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
        android:textColor="@color/blanc"
        android:textStyle="italic"
       android:text="affiche etat" />
</LinearLayout>
 <LinearLayout 
    android:orientation="vertical" 
    android:layout_gravity="center"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="80dp"
       android:layout_marginLeft="2dp"
    > 
   <Button
       android:id="@+id/bDetailForfaitiserConsultatFiche"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:text="Détails forfaitiser" />

   <Button
       android:id="@+id/bDetailsHorsForfaitConsultatFiche"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Détails hors forfait" />
</LinearLayout>
</LinearLayout>
