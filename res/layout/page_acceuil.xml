<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@color/autrebleue"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvtitrePageAcceuil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Page d'Acceuil" />
   <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     android:layout_marginTop="50dp"
       >
<TextView
        android:id="@+id/tvTitreIDVisiteurAcceuil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
        android:text="id du Visiteur" />
    
   <TextView
        android:id="@+id/tvAfficheurAcceuil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:textColor="@color/blanc"
         android:textStyle="italic"
        android:text="Affiche l'ID du Visiteur" />

   <TextView
       android:id="@+id/tvTitreNomVisiteuracceuil"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Nom du Visiteur" />

   <TextView
       android:id="@+id/tvAfficheurNomVisiteurAcceuil"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="100dp"
        android:textStyle="italic"
        android:textColor="@color/blanc"
       android:textSize="15dp"
       android:text="affiche nom du visiteur " />
 </LinearLayout>   
<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/blanc"
    android:layout_marginTop="80dp"
    >
    <Button
        android:id="@+id/bCreerFAcceuil"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="CrÃ©er une Fiche de Frais" />

    <Button
        android:id="@+id/bconsulterFAcceuil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_gravity="center"
        android:text="consulter une Fiche de Frais" />
</LinearLayout>
</LinearLayout>
